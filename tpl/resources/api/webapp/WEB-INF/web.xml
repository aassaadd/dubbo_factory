		<filter-name>sessionFilter</filter-name>
		<filter-class>{{groupid}}.{{name}}_api.filter.LoginFilter</filter-class>
	</filter>
	<filter>
		<filter-name>currentUserFilter</filter-name>
		<filter-class>{{groupid}}.{{name}}_api.filter.CurrentUserFilter</filter-class>
	</filter>
	<filter-mapping>
